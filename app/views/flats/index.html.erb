<%= form_with url: flats_path, method: :get, local: true do %>
  <div class="input-group mb-3">
    <%= text_field_tag :query, params[:query], class: 'form-control', placeholder: 'Search flats...' %>
    <button class="btn btn-outline-secondary" type="submit">Search</button>
  </div>
<% end %>
<h1>All Flats</h1>

<div class="row">
  <% @flats.each do |flat| %>
  <div class="col-md-4">
    <div class="card mb-4">
      <% if flat.picture_url.present? %>
        <img src="<%= flat.picture_url %>" class="card-img-top" alt="Flat image">
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text"><%= flat.description %></p>
        <p class="card-text"><%= flat.address %></p>
        <p class="card-text"><i class="fas fa-user-friends"></i><%= flat.number_of_guests %> â‚¬<%= flat.price_per_night %></p>
        <hr>
        <%= link_to 'More Info', flat_path(flat), class: "btn btn-outline-primary" %>
        <%= link_to 'Edit', edit_flat_path(flat), class: "btn btn-outline-warning" %>
        <%= link_to 'Remove', flat_path(flat), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
<% end %>
